                </div>
            </div>
            <div class="form-group">
                <%= f.label :code , :class=>"col-md-2"%>
                <div class="col-md-3">
                    <%= f.text_field :code, :class=>"form-control" %>                    
                </div>
            </div>
            <div class="form-group">
                <div class="actions">
                    <%= f.submit :class=>"btn btn-primary"%>
                </div>
            </div>
            <% end %>
        </div>
    </div>
</div>
